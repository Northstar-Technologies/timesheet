# Environment
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://timesheet:timesheet@db:5432/timesheet

# Microsoft 365 / Azure AD
# Get these from Azure Portal > App registrations > Your App
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
# Use 'common' for any Microsoft account, or your specific tenant ID
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=http://localhost/auth/callback

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (optional, for caching/SSE)
REDIS_URL=redis://redis:6379/0

# App base URL (used for bot deep links)
APP_BASE_URL=http://localhost

# Microsoft Teams Bot (Azure Bot Service / Bot Framework)
BOT_ENABLED=false
BOT_APP_ID=your-bot-app-id
BOT_APP_PASSWORD=your-bot-app-password
BOT_TENANT_ID=your-tenant-id

# Bot feature flags
BOT_WEEKLY_REMINDER_ENABLED=true
BOT_REMINDER_CRON=0 14 * * 5

# File uploads
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
